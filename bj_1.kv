<Screen>:
    orientation: 'vertical'
    
<InfoStrip>:
    orientation: 'vertical'
    size_hint_x: 0.15
    Label:
        text: 'info area'
        height: '50dp'
    Label:
        text: 'info area'
            
<PlayArea>:
    orientation: 'vertical'
    size_hint_y: None
    height: '350dp'
    spacing: 25
    padding: [5, 5, 5, 5]
    
<CardView>:
    size_hint_x: None
    width: str(125 * len(self.children)) +'dp'
    
<ButtonStrip>:
    pos_hint: {'bottom': 0}
    size_hint_y: 0.2
    spacing: 20
    Button:
        text: 'Stay'
    Button:
        text: 'Split'
    Button:
        text: 'Double'
    Button:
        text: 'Hit'
    
