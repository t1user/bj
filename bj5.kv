
<Screen>:
    
    playarea: playarea
    player_screen: player_screen
    dealer_screen: dealer_screen
    buttonstrip: buttonstrip
    
    orientation: 'vertical'
    spacing: 5
    padding: [5, 5, 5, 5]

    BoxLayout:
        id: outer
        size_hint_y: .9
        BoxLayout:
            id: infostrip
            orientation: 'vertical'
            size_hint_x: .1
            padding: [1, 5, 1, 5]
            spacing: 5
            Button:
                text: 'info area'
                size_hint_y: None
                size_hint_y: .30
                pos_hint: {'top': 1}
            Label:
                text: 'BET SIZE:'
                size_hint_y: .10
            Label:
                text: str(bet_size.value)
                font_size: '35dp'
                size_hint_y: .05
            Slider:
                id: bet_size
                size_hint_y: .55
                orientation: 'vertical'
                min: 25
                max: 300
                step: 25
                value: 50
        BoxLayout:
            id: playarea
            orientation: 'vertical'
            padding: [5, 5, 5, 5]
            spacing: '25dp'
            CardView:
                id: dealer_screen
                pos_hint: {'x': root.pos_para_dealer}
            BoxLayout:
                id: player_screen
                size_hint_x: None
                pos_hint: {'x': root.pos_para}
                spacing: root.hand_spacing
    BoxLayout:
        id: buttonstrip
        size_hint_y: .1
        padding: [5, 5, 5, 5]

<PlayActionButtons>:
    spacing: 10
    Button:
        text: 'Stay'
    Button:
        text: 'Split'
        on_press: root.split()
    Button:
        text: 'Double'
        on_press: root.double()
    Button:
        text: 'Hit'
        on_press: root.hit()

<CardView>:
    size_hint_x: None
    padding: [2, 2, 2, 2]

<PointsLabel>:
    size_hint: None, None
    font_size: '25dp'
    padding: [5, 5]
    pos_hint: {'center_y': .5}
    




